  <div id="map"></div>

  <script>
    function initMap() {
      const map = new google.maps.Map(document.getElementById("map"), {
        zoom: 8,
        center: { lat: 37.7749, lng: -122.4194 },
      });

      // Add markers for wild edible resources
      const markers = [
        {
          position: { lat: 37.7749, lng: -122.4194 },
          title: "San Francisco",
          icon: "https://maps.google.com/mapfiles/ms/icons/green-dot.png",
          info: "<h3>Wild Edible Resource Found in San Francisco</h3><p>Description of resource goes here.</p>",
        },
        {
          position: { lat: 37.3382, lng: -121.8863 },
          title: "San Jose",
          icon: "https://maps.google.com/mapfiles/ms/icons/green-dot.png",
          info: "<h3>Wild Edible Resource Found in San Jose</h3><p>Description of resource goes here.</p>",
        },
        {
          position: { lat: 38.5816, lng: -121.4944 },
          title: "Sacramento",
          icon: "https://maps.google.com/mapfiles/ms/icons/green-dot.png",
          info: "<h3>Wild Edible Resource Found in Sacramento</h3><p>Description of resource goes here.</p>",
        },
      ];

      markers.forEach((marker) => {
        const mapMarker = new google.maps.Marker({
          position: marker.position,
          map,
          title: marker.title,
          icon: marker.icon,
        });

        const infoWindow = new google.maps.InfoWindow({
          content: marker.info,
        });

        mapMarker.addListener("click", () => {
          infoWindow.open(map, mapMarker);
        });
      });
    }
  </script>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap"></script>
</body>
